<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>ch06</display-name>
		<filter>
		<filter-name>permission</filter-name>
		<filter-class>com.zhbit.notice.web.filter.PermissionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>permission</filter-name>
		<url-pattern>/page/system/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>com.zhbit.notice.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	
	<servlet>
		<servlet-name>typeServlet</servlet-name>
		<servlet-class>com.zhbit.notice.web.controller.TypeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>noticeServlet</servlet-name>
		<servlet-class>com.zhbit.notice.web.controller.NoticeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userServlet</servlet-name>
		<servlet-class>com.zhbit.notice.web.controller.UserServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>typeServlet</servlet-name>
		<url-pattern>/typeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>noticeServlet</servlet-name>
		<url-pattern>/noticeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userServlet</servlet-name>
		<url-pattern>/userServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>